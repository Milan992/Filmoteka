@model Filmoteka.ViewModels.MovieDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imagePath = "~/../../../App_Data/Posters/" + @Model.Movie.Poster;
}

<h2>Movie</h2>

<div class="col-md-6"><h1>@Model.Movie.Title (@Model.Movie.ReleaseDate.ToString("dd/MM/yyyy"))</h1></div>

<div class="col-md-6"><img src=@imagePath /></div>

<div class="col-md-12"><h3>Genre: @Model.Movie.Genre.GenreName</h3></div>

<div class="col-md-12"><h3>Director: <a href="~/directors/edit/@Model.Movie.Director.PersonId">@Model.Movie.Director.Person.FirstName @Model.Movie.Director.Person.LastName</a></h3></div>

@if (Model.Actors.Count > 0)
{
    <div class="col-md-6">
        <br />
        <br />
        <table class="table table-bordered table-hover">
            <tr>
                <th>Actor</th>
            </tr>
            @foreach (var actor in Model.Actors)
            {
                <tr>
                    <td><a href="~/actors/edit/@actor.Person.Id">@actor.Person.FirstName @actor.Person.LastName</a></td>
                </tr>
            }
        </table>
    </div>
}
